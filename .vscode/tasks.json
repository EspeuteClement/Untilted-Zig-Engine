{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "problemMatcher": [
        {
            "owner": "zig",
            "source": "zig",
            "fileLocation": "absolute",
            "pattern": [
                {
                    "column": 3,
                    "file": 1,
                    "line": 2,
                    "message": 4,
                    "regexp": "^(.+):(\\d+):(\\d+): error: (.+)$"
                }
            ]
        }
    ],
    "tasks": [
        {
            "label": "zig build",
            "type": "shell",
            "command": "zig build --prominent-compile-errors",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": "build"
        },
        {
            "label": "zig test",
            "type": "shell",
            "command": "zig",
            "args": [
                "test",
                "${file}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}